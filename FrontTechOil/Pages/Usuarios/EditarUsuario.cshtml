@page "/usuarios/editar/{codUsuario}"
@model FrontTechOil.Pages.EditarUsuarioModel


<body>
    <!-- Formulario con los campos de edición del usuario-->
    <form method="post">
        <div class="form-group">
            <label>Código de Usuario</label>
            <input type="number" class="form-control" asp-for="Usuario.codUsuario" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Usuario.nombre">Nombre</label>
            <input type="text" class="form-control" asp-for="Usuario.nombre" required>
        </div>
        <div class="form-group">
            <label asp-for="Usuario.dni">DNI</label>
            <input type="number" class="form-control" asp-for="Usuario.dni" min="1000000" max="99999999" required>
        </div>
        <div class="form-group">
            <label asp-for="Usuario.tipo">Tipo</label>
            <input type="number" class="form-control" asp-for="Usuario.tipo" min="1" max="2" required>
        </div>
        <div class="form-group">
            <label asp-for="Usuario.contrasena">Contraseña</label>
            <input type="password" class="form-control" asp-for="Usuario.contrasena" required>
        </div>

        <!-- Botones de edición -->
        <div class="modal-footer">
            <a href="/Usuarios"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button></a>
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                Eliminar
            </button>
        </div>
    </form>


    <!-- Modal para confirmar la eliminación del Usuario -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que quieres eliminar este elemento?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="post"><input id="delete" type="submit" asp-page-handler="Delete" class="btn btn-danger" value="Eliminar"></input></form>
                </div>
            </div>
        </div>
    </div>
</body>