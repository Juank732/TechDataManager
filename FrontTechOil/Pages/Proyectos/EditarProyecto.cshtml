@page "/Proyectos/editar/{codProyecto}"
@model FrontTechOil.Pages.Proyectos.EditarProyectoModel
@{
}

<body>
    <!-- Formulario con los campos a editar -->
    <form method="post">
        <div class="form-group">
            <label asp-for="Proyecto.codProyecto">Código de Proyecto</label>
            <input type="number" class="form-control" asp-for="Proyecto.codProyecto" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Proyecto.nombre">Nombre</label>
            <input type="text" class="form-control" asp-for="Proyecto.nombre" required>
        </div>
        <div class="form-group">
            <label asp-for="Proyecto.direccion">Dirección</label>
            <input type="text" class="form-control" asp-for="Proyecto.direccion" required>
        </div>
        <div class="form-group">
            <label asp-for="Proyecto.estado">Estado</label>
            <input type="number" class="form-control" asp-for="Proyecto.estado" min="1" max="3" required>
        </div>

        <!-- Botones de edición -->
        <div class="modal-footer">
            <a href="/Proyectos"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button></a>
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Eliminar</button>
        </div>
    </form>

    <!-- Modal de confirmación para eliminar un proyecto-->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que quieres eliminar este elemento?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="post"><input id="delete" type="submit" asp-page-handler="Delete" class="btn btn-danger" value="Eliminar"></input></form>
                </div>
            </div>
        </div>
    </div>
</body>

