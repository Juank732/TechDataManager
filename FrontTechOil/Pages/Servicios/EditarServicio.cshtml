@page "/Servicios/editar/{codServicio}"
@model FrontTechOil.Pages.Servicios.EditarServicioModel
@{
}

<head>
    <link rel="stylesheet" href="/css/ui_Servicio.css"> <!-- Carga la hoja de estilos -->
</head>
<body>
    <!-- Creación del formulario con los campos para la edición del servicio-->
    <form method="post">
        <div class="form-group">
            <label asp-for="Servicio.codServicio">Código de Servicio</label>
            <input type="number" class="form-control" asp-for="Servicio.codServicio" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Servicio.descr">Descripción</label>
            <input type="text" class="form-control" asp-for="Servicio.descr" required>
        </div>
        <div class="form-group">
            <label>Estado</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Servicio.estado" value="true">
                <label class="form-check-label">Verdadero</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Servicio.estado" value="false">
                <label class="form-check-label">Falso</label>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Servicio.valorHora">Valor por Hora</label>
            <input type="text" class="form-control" asp-for="Servicio.valorHora" required>
        </div>

        <!-- Botones de edición -->
        <div class="modal-footer">
            <a href="/Servicios"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button></a>
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                Eliminar
            </button>
        </div>
    </form>

    <!-- Modal para confirmar la eliminación del servicio-->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que quieres eliminar este elemento?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="post"><input id="delete" type="submit" asp-page-handler="Delete" class="btn btn-danger" value="Eliminar"></input></form>

                </div>
            </div>
        </div>
    </div>  
</body>