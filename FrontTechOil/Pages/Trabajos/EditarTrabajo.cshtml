@page "/Trabajos/editar/{codTrabajo}"
@model FrontTechOil.Pages.Trabajos.EditarTrabajoModel
@{
}

<body>
    <!-- Formulario con los campos de edición de Trabajo-->
    <form method="post">
        <div class="form-group">
            <label asp-for="Trabajo.codTrabajo">Código de Trabajo</label>
            <input type="number" class="form-control" asp-for="Trabajo.codTrabajo" readonly >
        </div>
        <div class="form-group">
            <label asp-for="Trabajo.fecha">Fecha</label>
            <input type="datetime" class="form-control" asp-for="Trabajo.fecha" required>
        </div>
        <div class="form-group">
            <label asp-for="Trabajo.cantHoras">Cant. de Horas</label>
            <input type="number" class="form-control" asp-for="Trabajo.cantHoras" required>
        </div>
        <div class="form-group">
            <label asp-for="Trabajo.valorHora">Valor por Hora</label>
            <input type="text" class="form-control" asp-for="Trabajo.valorHora"  required>
        </div>
        <div class="form-group">
            <label asp-for="Trabajo.costo">Costo</label>
            <input type="text" class="form-control" asp-for="Trabajo.costo" required>
        </div>
        <div class="form-group">
            <label asp-for="Trabajo.codProyecto">Código de Proyecto</label>
            <input type="number" class="form-control" asp-for="Trabajo.codProyecto" min="0" required>
        </div>
        <div class="form-group">
            <label asp-for="Trabajo.codServicio">Código de Servicio</label>
            <input type="number" class="form-control" asp-for="Trabajo.codServicio" min="0" required>
        </div>


        <!-- Botones de edición -->
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                Eliminar
            </button>
        </div>
    </form>

    <!-- Modal para confirmar la eliminación del Trabajo -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que quieres eliminar este elemento?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="post"><input id="delete" type="submit" asp-page-handler="Delete" class="btn btn-danger" value="Eliminar"></input></form>
                
                </div>
            </div>
        </div>
    </div>
</body>